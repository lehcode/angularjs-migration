{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["node"],
    "allowJs": true,
    "esModuleInterop": true
  },
  "files": ["src/main.ts"],
  "include": [
    "src/**/*.d.ts",
    "src/types/legacy.d.ts",
    "src/app/legacy/*.js"
  ],
  "exclude": ["jest.config.ts", "src/**/*.test.ts", "src/**/*.spec.ts"]
}
